{
  "openapi": "3.0.1",
  "info": {
    "title": "ChatService",
    "version": "1.0"
  },
  "paths": {
    "/api/chat/send": {
      "post": {
        "tags": [
          "Chat"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessage"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessage"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessage"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/chat/history": {
      "get": {
        "tags": [
          "Chat"
        ],
        "parameters": [
          {
            "name": "senderId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "recieverId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatMessage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "senderId": {
            "type": "string",
            "nullable": true
          },
          "receiverId": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "timeSent": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}